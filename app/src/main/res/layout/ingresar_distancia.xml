<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:text="Buscar reclamos a: " android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView4"
        android:textAlignment="textStart"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        />

    <EditText android:id="@+id/distanciaReclamo" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="KM"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/button_Cancelar" />

    <Button
        android:text="Buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Buscar"
        android:layout_weight="1"
        android:layout_below="@+id/distanciaReclamo"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Cancelar"
        android:layout_weight="1"
        android:layout_below="@+id/distanciaReclamo"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginEnd="69dp" />




</RelativeLayout>